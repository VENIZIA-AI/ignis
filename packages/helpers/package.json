{
  "name": "@venizia/ignis-helpers",
  "version": "0.0.1-6",
  "description": "Utility helpers for the Ignis Framework - logging, cron, Redis, queues, storage, and more",
  "keywords": [
    "ignis",
    "helpers",
    "utilities",
    "library",
    "utils",
    "tools",
    "common",
    "shared",
    "logging",
    "logger",
    "log-management",
    "winston",
    "cron",
    "cronjob",
    "scheduler",
    "redis",
    "ioredis",
    "queue",
    "message-queue",
    "bullmq",
    "storage",
    "object-storage",
    "file-storage",
    "minio",
    "s3",
    "aws-s3",
    "mqtt",
    "pub-sub",
    "socket.io",
    "real-time",
    "websockets",
    "venizia",
    "bun",
    "nodejs",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "dist",
    "!/**/tests",
    "!/**/dist/tests",
    "!/**/__tests__",
    "!**/*.tsbuildinfo"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.3"
  },
  "scripts": {
    "force-update": "sh ./scripts/force-update.sh",
    "build": "sh ./scripts/build.sh",
    "clean": "sh ./scripts/clean.sh",
    "eslint": "eslint --report-unused-disable-directives .",
    "lint": "bun run eslint && bun run prettier:cli",
    "lint:fix": "bun run eslint --fix && bun run prettier:fix",
    "prettier:cli": "prettier \"**/*.{js,ts}\" -l",
    "prettier:fix": "bun run prettier:cli --write",
    "rebuild": "sh ./scripts/rebuild.sh no-version",
    "prepublishOnly": "bun run rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VENIZIA-AI/ignis.git",
    "directory": "packages/helpers"
  },
  "author": {
    "name": "VENIZIA AI Developer",
    "email": "developer@venizia.ai",
    "url": "https://venizia.ai"
  },
  "bugs": {
    "url": "https://github.com/VENIZIA-AI/ignis/issues"
  },
  "homepage": "https://venizia-ai.github.io/ignis",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "@socket.io/redis-emitter": "^5.1.0",
    "@venizia/ignis-inversion": "latest",
    "axios": "^1.12.2",
    "bullmq": "^5.63.1",
    "cron": "^4.3.3",
    "dayjs": "^1.11.18",
    "hono": "^4.10.7",
    "ioredis": "^5.7.0",
    "lodash": "^4.17.21",
    "minio": "^8.0.6",
    "mqtt": "^5.14.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0"
  },
  "peerDependenciesMeta": {
    "@socket.io/redis-adapter": {
      "optional": true
    },
    "@socket.io/redis-emitter": {
      "optional": true
    },
    "socket.io": {
      "optional": true
    },
    "socket.io-client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@types/bun": "^1.3.4",
    "@types/lodash": "^4.17.20",
    "@venizia/dev-configs": "^0.0.1-4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "sideEffects": false
}
