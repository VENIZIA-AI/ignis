{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@venizia/dev-configs/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,

    /* Paths */
    "outDir": "mcp-server/dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Build Info */
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": [
    "mcp-server/**/*.ts",
    "site/.vitepress/config.mts",
    "site/.vitepress/theme/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "mcp-server/dist", "wiki"]
}