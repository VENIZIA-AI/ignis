{
  "name": "@vez/dev-configs",
  "version": "0.0.0",
  "description": "Shared development configurations for Venizia packages",
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "typescript",
    "tsconfig",
    "venizia",
    "vez",
    "development"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint.d.ts",
      "default": "./dist/eslint.js"
    },
    "./prettier": {
      "types": "./dist/prettier.d.ts",
      "default": "./dist/prettier.js"
    },
    "./tsconfig.base.json": "./tsconfig/tsconfig.base.json",
    "./tsconfig.common.json": "./tsconfig/tsconfig.common.json",
    "./prettierignore": "./prettier/.prettierignore",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3"
  },
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "clean": "sh ./scripts/clean.sh",
    "rebuild": "sh ./scripts/rebuild.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VENIZIA-AI/ignis.git"
  },
  "author": "Venizia AI <contact@venizia.com>",
  "bugs": {
    "url": "https://github.com/VENIZIA-AI/ignis/issues"
  },
  "homepage": "https://github.com/VENIZIA-AI/ignis/wiki",
  "license": "MIT",
  "files": [
    "dist",
    "tsconfig",
    "prettier/.prettierignore"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@minimaltech/eslint-node": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
