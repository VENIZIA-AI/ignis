#!/bin/bash

# =============================================================================
# Pre-commit Hook
# Lints all packages and examples before allowing commit
# =============================================================================

set -e

echo "üîç Running pre-commit checks..."
echo ""

# Get the root directory of the git repository
ROOT_DIR="$(git rev-parse --show-toplevel)"
cd "$ROOT_DIR"

# Run lint on all packages and examples
echo "üì¶ Linting all packages and examples..."
make lint-all

echo ""
echo "‚úÖ Pre-commit checks passed!"
